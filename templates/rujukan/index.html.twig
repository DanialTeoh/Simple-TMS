{% extends 'base.html.twig' %}

{% block title %}Rujukan index{% endblock %}

{% block content %}
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <!-- Table with stripped rows -->
                        <br>
                        <div style="display: flex; align-items: center; gap: 1000px;">
                            <h2><strong>Rujukan</strong></h2>
                            {% if flag != '' %}
                            <a class="btn btn-success" href="{{ path('app_rujukan_new',{'flag':flag } )}}">Create new</a>
                            {% endif %}
                        </div>
                        <table class="table datatable">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nama</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            </thead>
                            <tbody>
                            {% for rujukan in rujukans %}
                                <tr>
                                    <td>{{ rujukan.id }}</td>
                                    <td>{{ rujukan.nama }}</td>
                                    <td>
                                        <a class="btn btn-info" href="{{ path('app_rujukan_show', {'id': rujukan.id}) }}">Show</a>
                                        <a class="btn btn-info" href="{{ path('app_rujukan_edit', {'id': rujukan.id}) }}">Edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
