{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block content %}
        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <!-- Table with stripped rows -->
                            <br>
                            <div style="display: flex; align-items: center; gap: 1000px;">
                                <h2><strong>Tasks</strong></h2>
                                <a class="btn btn-success" href="{{ path('app_task_new',{'id':app.user.id} )}}">Create new</a>
                            </div>
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>CreatedAt</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for task in tasks %}
                                    <tr>
                                        <td>{{ task.id }}</td>
                                        <td>{{ task.title }}</td>
                                        <td>{{ task.description }}</td>
                                        <td>{{ task.status ? 'Yes' : 'No' }}</td>
                                        <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>
                                            <a href="{{ path('app_task_show', {'id': task.id}) }}"  class="btn btn-info">show</a>
                                            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-info" >edit</a>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="6">no records found</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->
                        </div>
                    </div>

                </div>
            </div>
        </section>
{% endblock %}
