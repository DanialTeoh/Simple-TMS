<link rel="stylesheet" type="text/css" href="{{ asset('tms/vendors/styles/core.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('tms/vendors/styles/icon-font.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('tms/vendors/styles/style.css') }}">

{% block content %}
    <div class="login-header box-shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="brand-logo">
                <a href="{{ path('homepage') }}">
                    <img src="{{ asset('tms/vendors/images/deskapp-logo.svg') }}" alt="Logo">
                </a>
            </div>
        </div>
    </div>

    <div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 col-lg-7">
                    <img src="{{ asset('tms/vendors/images/login-page-img.png') }}" alt="Login Image">
                </div>
                <div class="col-md-6 col-lg-5">
                    <div class="login-box bg-white box-shadow border-radius-10">
                        <div class="login-title">
                            <h2 class="text-center text-primary">Welcome</h2>
                        </div>
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <label for="username">Username</label>
                            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                            <br>
                            <label for="password">Password</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                            <input type="hidden" name="_target_path" value="/dashboard">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <input type="checkbox" name="_remember_me" id="_remember_me">
                                <label for="_remember_me">Remember me</label>
                            </div>
                            #}
                            <br>
                            <button class="btn btn-lg btn-primary" type="submit">Log in </button>
                            <a href="{{ path('app_register') }}" class="btn btn-lg btn-primary" type="submit">Register</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript files -->
    <script src="{{ asset('tms/vendors/scripts/core.js') }}"></script>
    <script src="{{ asset('tms/vendors/scripts/script.min.js') }}"></script>
    <script src="{{ asset('tms/vendors/scripts/process.js') }}"></script>
    <script src="{{ asset('tms/vendors/scripts/layout-settings.js') }}"></script>
{% endblock %}
